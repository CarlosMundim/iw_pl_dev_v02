# Search Service Environment Configuration

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3009
SERVICE_NAME=search-service

# ============================================
# ELASTICSEARCH CONFIGURATION
# ============================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password
ELASTICSEARCH_INDEX_PREFIX=iworkz
ELASTICSEARCH_TIMEOUT=30000

# ============================================
# SEARCH CONFIGURATION
# ============================================
MAX_SEARCH_RESULTS=100
SEARCH_TIMEOUT=5000
FUZZY_SEARCH_ENABLED=true
AUTOCOMPLETE_ENABLED=true

# ============================================
# INDEXING CONFIGURATION
# ============================================
AUTO_INDEX_ENABLED=true
BULK_INDEX_SIZE=1000
INDEX_REFRESH_INTERVAL=1s

# ============================================
# LANGUAGE SUPPORT
# ============================================
SUPPORTED_LANGUAGES=en,ja,ko,zh
DEFAULT_LANGUAGE=ja
ANALYZER_JAPANESE=kuromoji
ANALYZER_ENGLISH=standard