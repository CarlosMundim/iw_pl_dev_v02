# =============================================================================
# iWORKZ Staging Environment Variables
# =============================================================================

# Database Configuration
POSTGRES_PASSWORD=staging_secure_password_2024
JWT_SECRET=staging_jwt_secret_key_very_secure_2024
API_KEY=staging_api_key_2024

# External Service API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
SENDGRID_API_KEY=your_sendgrid_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
PUSH_NOTIFICATION_KEY=your_push_notification_key_here

# Authentication & Security
NEXTAUTH_SECRET=staging_nextauth_secret_2024
NEXTAUTH_URL=https://staging.iworkz.com

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here
GRAFANA_PASSWORD=staging_grafana_admin_2024

# SSL Configuration (if using custom certificates)
SSL_CERT_PATH=/opt/iworkz/staging/ssl
SSL_KEY_PATH=/opt/iworkz/staging/ssl

# Backup Configuration
BACKUP_ENCRYPTION_KEY=staging_backup_encryption_key_2024
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=iworkz-staging-backups
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Performance Tuning
DATABASE_MAX_CONNECTIONS=100
REDIS_MAX_MEMORY=512mb
NODE_OPTIONS=--max-old-space-size=1024

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true

# Staging Specific Settings
STAGING_MODE=true
DEBUG_LOGGING=true
DEMO_DATA_ENABLED=true
EXTERNAL_INTEGRATIONS_ENABLED=false