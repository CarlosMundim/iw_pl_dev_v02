# ==============================================
# iWORKZ Platform Environment Configuration
# ==============================================

# General Configuration
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
POSTGRES_DB=iworkz_platform
POSTGRES_USER=iworkz_user
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://localhost:6379

# API Configuration
API_PORT=3001
API_SECRET=your_super_secret_api_key_here
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=iWORKZ Platform

# AI Services Configuration
AI_SERVICE_PORT=8001
OPENAI_API_KEY=your_openai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Microservices Ports
MATCHING_PORT=3003
COMPLIANCE_PORT=8003
ANALYTICS_PORT=8004
INTEGRATION_PORT=3004
ADMIN_PORT=3002
VOICE_ASSISTANT_PORT=8005
NOTIFICATION_PORT=8006
SEARCH_PORT=8007
CREDENTIAL_PORT=8008
INVESTORS_PORT=3005

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@iworkz.com
FROM_NAME=iWORKZ Platform

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Search Configuration (Elasticsearch)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# External API Keys
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Security
JWT_SECRET=your_jwt_secret_key
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Voice Assistant Configuration
WHISPER_MODEL_SIZE=base
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC_ph

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Development Tools
ENABLE_SWAGGER=true
ENABLE_CORS=true
DEBUG_MODE=false

# ==============================================
# Production Overrides (uncomment for production)
# ==============================================

# NODE_ENV=production
# DEBUG_MODE=false
# ENABLE_SWAGGER=false
# LOG_LEVEL=warn

# ==============================================
# Credential Engine & Blockchain Configuration
# ==============================================

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password

# Blockchain Configuration
DEFAULT_CHAIN=sepolia
BLOCKCHAIN_PRIVATE_KEY=your_blockchain_private_key
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_key
POLYGON_RPC_URL=https://polygon-rpc.com
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY=https://gateway.ipfs.io
IPFS_PROJECT_ID=your_infura_ipfs_project_id
IPFS_PROJECT_SECRET=your_infura_ipfs_secret

# Issuer Configuration
ISSUER_ADDRESS=0x1234567890abcdef1234567890abcdef12345678

# Investors Website Configuration
# ==============================================
INVESTORS_SITE_URL=https://investors.iworkz.com
CONTENTFUL_SPACE_ID=your_contentful_space_id
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token
CONTACT_EMAIL=investors@iworkz.com
